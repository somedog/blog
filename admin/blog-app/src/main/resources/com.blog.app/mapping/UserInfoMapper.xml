<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blog.app.mapping.UserInfoMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.blog.app.po.UserInfo">
		<id column="id" property="id" />
		<result column="acctno" property="acctno" />
		<result column="username" property="username" />
		<result column="area" property="area" />
		<result column="email" property="email" />
		<result column="job" property="job" />
		<result column="git_no" property="gitNo" />
		<result column="image" property="image" />
		<result column="sex" property="sex" />
		<result column="description" property="description" />
	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, acctno, username, area, email, job, git_no AS gitNo, image, sex, description
    </sql>

</mapper>
